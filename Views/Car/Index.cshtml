@model List<Car>

@{
    Layout = "_AdminLayout";
}
@if (TempData["basarili"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["basarili"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div class="col">
            <h1 class="text-center">Araçlar</h1>
        </div>
    </div>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Görsel</th>
                <th>ID</th>
                <th>Adı</th>
                <th>Açıklama</th>
                <th>Marka</th>
                <th>Fiyat</th>
                <th>Araç Türü</th>
                @if (User.IsInRole(AppRole.Role_Admin))
                {
                    <th>Güncelle</th>
                    <th>Sil</th>
                }
                <th>Kirala</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td class="text-center">
                        <img src="@car.ImageUrl" class="img-thumbnail" style="max-width: 188px; border-radius: 7px; border: 1px solid #bbb9b9;" />
                    </td>
                    <td>@car.Id</td>
                    <td>@car.Name</td>
                    <td>@car.Definition</td>
                    <td>@car.Brand</td>
                    <td>@car.Price</td>
                    <td>@car.CarType.Id</td>
                    @if (User.IsInRole(AppRole.Role_Admin))
                    {
                        <td>
                            <a asp-controller="Car" asp-action="AddUpdate" asp-route-id="@car.Id" class="btn btn-info w-100">Güncelle</a>
                        </td>
                        <td>
                            <a asp-controller="Car" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger w-100">Sil</a>
                        </td>
                    }
                    <td>
                        <a asp-controller="Rental" asp-action="Rent" asp-route-id="@car.Id" class="btn btn-success w-100">Kirala</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (User.IsInRole(AppRole.Role_Admin))
    {
        <div class="row pt-3 pb-2">
            <div class="col text-center">
                <a asp-controller="Car" asp-action="AddUpdate" class="btn btn-lg btn-primary">
                    Yeni Araç Oluştur
                </a>
            </div>
        </div>
    }
</div>

