<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRentalPortal.styles.css" asp-append-version="true" />
    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
        }

            .sidebar a {
                color: white;
                padding: 15px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex-grow: 1;
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer {
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="sidebar">
            <h3 class="p-3">Yönetim Paneli</h3>
            <a asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
            @if (User.IsInRole(AppRole.Role_Admin))
            {
                <a asp-area="" asp-controller="CarType" asp-action="Index">Araç Türü</a>
                <a asp-area="" asp-controller="Car" asp-action="Index">Araçları Düzenle</a>
                <a asp-area="" asp-controller="Rental" asp-action="Index">Kiralama</a>
                <a asp-area="" asp-controller="SignalR" asp-action="Index">Canlı Sohbet</a>
                <a asp-area="" asp-controller="Notes" asp-action="Index">Borcu Olanlar Listesi</a>
            }
            @if (User.IsInRole(AppRole.Role_Customer))
            {
                <a asp-area="" asp-controller="Car" asp-action="Index">Araçlar</a>
            }
            <a asp-area="" asp-controller="Home" asp-action="Privacy">İletişim</a>
        </div>
        <div class="content">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-danger border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="" asp-action="Index">Araç Kiralama Portalı</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">İletişim</a>
                                </li>
                            </ul>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
